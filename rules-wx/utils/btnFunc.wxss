.btn-func {
  width: 100%;
  height: 112rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFFFF;
  position: relative;
  margin-top: 4rpx;
}

.btn-func-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin: 32rpx;
}

.btn-text {
  width: 100%;
  font-size: 36rpx;
}
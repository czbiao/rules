.artical-container {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}

.artical {
  padding: 36rpx 32rpx;
  background-color: #ffffff;
}

.artical-header {
  display: flex;
  flex-direction: column;
}

.title-text, .content-text {
  white-space: pre-wrap;
  word-break: break-all;
}

.title-text {
  font-size: 40rpx;
  font-weight: 900;
  line-height: 60rpx;
}

.outline {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 32rpx 0rpx;
}

.date-text {
  font-size: 28rpx;
  color: #B2B2B2;
}

.source-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #4285F5;
}

.artical-body {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
}

.picture {
  align-self: center;
}

.content-text {
  font-size: 36rpx;
  color: #353535;
  line-height: 54rpx;
}

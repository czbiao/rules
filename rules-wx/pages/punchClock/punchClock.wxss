/* punchClock.wxss */
.item-title {
  font-size: 28rpx;
  width: 100%;
  text-align: left;
  /* margin: 35rpx 0 12rpx 156rpx; */
  margin: 35rpx 0 12rpx 32rpx;
}

.item-info-wrap {
  width: 100%;
  height: 100rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 0 35rpx 0;
  background-color: #FFFFFF;
}

.item-info0, .item-info1, .item-info2 {
  width: 100%;
  height: 100%;
  position: relative;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-count, .text-title {
  font-size: 28rpx;
  position: absolute;
}

.text-count {
  position: absolute;
  top: 12rpx;
}

.text-title {
  position: absolute;
  bottom: 12rpx;
}

.text-placeholder {
  font-size: 28rpx;
}

.form-area {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.textarea {
  width: 100%;
  font-size: 28rpx;
  margin:0rpx 0rpx 100rpx 0rpx;
  background-color: #FFFFFF;
  padding: 32rpx;
}

.action-area {
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.btn-large {
  text-align: center;
  padding: 32rpx;
  background-color: #4285F5;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 20rpx;
  margin: 0 32rpx;
}

.btn-large-default {
  text-align: center;
  padding: 32rpx;
  background-color: #FFFFFF;
  color: #000000;
  font-size: 28rpx;
  border-radius: 20rpx;
  margin: 0 32rpx;
  border: 4rpx solid #eef2f7;
}

.btn-hover {
  background-color: rgba(66, 133, 245, 0.7)
}

.btn-large-default-hover {
  background-color: rgba(178, 178, 178, 0.3);
}
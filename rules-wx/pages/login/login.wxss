/* login.wxss */
@import "../../utils/card.wxss";
.text-placeholder {
  font-size: 28rpx;
}

.textarea {
  font-size: 28rpx;
  margin:0rpx 0rpx 100rpx 0rpx;
  background-color: #FFFFFF;
}

.btn-primary {
  margin: 0rpx  0rpx 35rpx 0rpx;
}

.form-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin: 224rpx 0 112rpx 0;
}

.form-row {
  height: 112rpx;
  display: flex;
  flex-direction: row;
  line-height: 112rpx;
  padding-left: 32rpx;
  align-items: center;
}

.form-text {
  font-size: 28rpx;
  flex: 1;
}

.form-input {
  height: 56rpx;
  flex: 3;
}

.splitline {
  height: 2rpx;
  background-color: #b2b2b2;
  margin-left: 32rpx
}

.action-area {
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}